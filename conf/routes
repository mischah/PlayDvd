# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authentication
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()

# Register
GET     /register                   controllers.Application.register()
POST    /register                   controllers.Application.registeruser()

# DVD Lists
GET     /dvds                       controllers.ListDvds.listdvds(pageNr: Integer ?= null)
GET     /dvds/all                   controllers.ListDvds.listAlldvds()
GET     /dvds/by/Genre/:genreName   controllers.ListDvds.listByGenre(genreName: String,pageNr: Integer ?= 0)
GET     /dvds/by/user/:userName     controllers.ListDvds.listByUser(userName: String,pageNr: Integer ?= 0)
GET     /dvds/search                controllers.ListDvds.searchDvd()


GET     /genremenu                         controllers.Dashboard.menuGenres()
GET     /image/:dvdId/:imgType/:imgSize    controllers.Dashboard.streamImage(dvdId: Long, imgType: String, imgSize: String)
GET     /gravatar                          controllers.Dashboard.gravatar()

# Display the Dvd
GET     /showdvd/:dvdId              controllers.Dashboard.displayDvd(dvdId: Long)

# Lend DVD
GET     /lendDvd/:dvdId              controllers.Dashboard.lendDialogContent(dvdId: Long)
POST    /lendDvd/:dvdId              controllers.Dashboard.lendDvd(dvdId: Long)

# ADD edit DVD
GET    /dvd/add                  controllers.Dashboard.showAddDvd()
POST   /dvd/addDvdByTmdb/:mode   controllers.Dashboard.addDvdByTmdbId(mode: String)
POST   /dvd/:mode                controllers.Dashboard.addDvd(mode: String)
GET    /dvd/edit/:dvdId          controllers.Dashboard.showEditDvd(dvdId: Long) 

# TMDB 
GET    /tmdb/search                 controllers.Tmdb.searchTmdb(searchTerm = "")
GET    /tmdb/search/:searchTerm     controllers.Tmdb.searchTmdb(searchTerm: String)
GET    /tmdb/info/:movieId          controllers.Tmdb.getMovieById(movieId: java.lang.Integer)

# Javascript routing
GET     /assets/javascripts/routes 	 controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
