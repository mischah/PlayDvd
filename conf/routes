# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Authentication
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()
GET     /profile                    controllers.Dashboard.profile()

# Register
GET     /register                   controllers.Application.register()
POST    /register                   controllers.Application.registeruser()

# DVD Lists
GET     /dvds                             controllers.ListDvds.listdvds(pageNr: java.lang.Integer ?= null)
GET     /dvds/all                         controllers.ListDvds.listAlldvds()
GET     /dvds/by/genre/:genreName         controllers.ListDvds.listByGenre(genreName: String,pageNr: java.lang.Integer ?= 0)
GET     /dvds/by/actor/:actorName         controllers.ListDvds.listByActor(actorName: String)
GET     /dvds/by/director/:directorName   controllers.ListDvds.listByDirector(directorName: String)
GET     /dvds/by/user/:userName           controllers.ListDvds.listByUser(userName: String,pageNr: java.lang.Integer ?= 0)
GET     /dvds/lend                        controllers.ListDvds.listLendDvd()
GET     /dvds/search                      controllers.ListDvds.searchDvd()
POST    /dvds                             controllers.ListDvds.applySearchForm() 


GET     /genremenu                         controllers.Dashboard.menuGenres()
GET     /image/:dvdId/:imgType/:imgSize    controllers.Dashboard.streamImage(dvdId: Long, imgType: String, imgSize: String)
GET     /gravatar/:userName                controllers.Dashboard.gravatar(size: java.lang.Integer, userName: String)


# Display the Dvd
GET     /showdvd/:dvdId              controllers.Dashboard.displayDvd(dvdId: Long)

# Lend DVD
GET     /lendDvd/:dvdId              controllers.Dashboard.lendDialogContent(dvdId: Long)
POST    /lendDvd/:dvdId              controllers.Dashboard.lendDvd(dvdId: Long)

# ADD edit DVD
GET    /dvd/add                  controllers.DvdController.showAddDvd()
POST   /dvd/:mode                controllers.DvdController.addDvd(mode: String)
GET    /dvd/edit/:dvdId          controllers.DvdController.showEditDvd(dvdId: Long)

# MOVIE ROUTES
POST   /movie/addMovieByTmdb/:mode controllers.MovieController.addMovieByTmdbId(mode: String)
GET    /movie/add                  controllers.MovieController.showAddMovieForm()
GET    /movie/edit/:movieId        controllers.MovieController.showEditMovieForm(movieId: Long)
POST   /movie/:mode                controllers.MovieController.addOrEditMovie(mode: String) 


# TMDB 
GET    /tmdb/search                 controllers.Tmdb.searchTmdb(searchTerm = "")
GET    /tmdb/search/:searchTerm     controllers.Tmdb.searchTmdb(searchTerm: String)
GET    /tmdb/info/:movieId          controllers.Tmdb.getMovieById(movieId: java.lang.Integer)

# Javascript routing
GET     /assets/javascripts/routes 	 controllers.Application.jsRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
